@using SportsStore.Domain.Entities

@model IEnumerable<Product>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<h3>@(Model?.Count())</h3>

<div class="products-list">
    @foreach (var item in Model)
    {
        <div>
            <h3>@item.Name</h3>
            @item.Description
            <h4>@item.Price.ToString("c")</h4>
        </div>
    }
</div>